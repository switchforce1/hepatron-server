{% extends 'layout.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block content %}
    <h1>Publication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Description</th>
                <th>CreationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.label }}</td>
                <td>{{ publication.description }}</td>
                <td>{{ publication.creationDate ? publication.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('middle_publication_show', {'id': publication.id}) }}">show</a>
                    <a href="{{ path('middle_publication_edit', {'id': publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('middle_publication_new') }}">Create new</a>
{% endblock %}
