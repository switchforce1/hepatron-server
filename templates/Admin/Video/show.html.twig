{% extends 'layout.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ video.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ video.creationDate ? video.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ video.updateDate ? video.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FilePath</th>
                <td>{{ video.filePath }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ video.detail ? video.detail|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_video_index') }}">back to list</a>

    <a href="{{ path('admin_video_edit', {'id': video.id}) }}">edit</a>

    {{ include('Admin/Video/_delete_form.html.twig') }}
{% endblock %}