{% extends 'layout.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ image.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ image.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ image.creationDate ? image.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ image.updateDate ? image.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FilePath</th>
                <td>{{ image.filePath }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ image.detail ? image.detail|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_image_index') }}">back to list</a>

    <a href="{{ path('admin_image_edit', {'id': image.id}) }}">edit</a>

    {{ include('Admin/Image/_delete_form.html.twig') }}
{% endblock %}