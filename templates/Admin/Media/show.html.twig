{% extends 'layout.html.twig' %}

{% block title %}Media{% endblock %}

{% block content %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>DefaultWidth</th>
                <td>{{ medium.defaultWidth }}</td>
            </tr>
            <tr>
                <th>DefaultHeigth</th>
                <td>{{ medium.defaultHeigth }}</td>
            </tr>
            <tr>
                <th>RelativePath</th>
                <td>{{ medium.relativePath }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medium.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ medium.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ medium.creationDate ? medium.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ medium.updateDate ? medium.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FilePath</th>
                <td>{{ medium.filePath }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ medium.detail ? medium.detail|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_media_index') }}">back to list</a>

    <a href="{{ path('admin_media_edit', {'id': medium.id}) }}">edit</a>

    {{ include('Admin/Media/_delete_form.html.twig') }}
{% endblock %}
